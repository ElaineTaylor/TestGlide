<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="基础使用"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="指定GIF图片"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置占位符Placeholder"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_three"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置错误符Error"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_four"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置后备回调符(Fallback)"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_five"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RequestOptions"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_six"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="过度选项"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_seven"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="缩略图"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_eight"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="磁盘缓存"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_nine"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="仅从缓存加载图片"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_ten"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跳过缓存"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_eleven"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取Bitmap"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_twelve"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>